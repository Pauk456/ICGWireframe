<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ICGFrame.Presentation.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="ICGFrame.Presentation.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="ICGFrame — Modern Edition">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<!-- Градиентный фон -->
	<Window.Background>
		<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
			<GradientStop Color="#e0f7fa" Offset="0"/>
			<GradientStop Color="#ffffff" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Меню -->
			<RowDefinition Height="*"/>
			<!-- Основная область -->
			<RowDefinition Height="Auto"/>
			<!-- Нижняя панель -->
		</Grid.RowDefinitions>

		<!-- Меню -->
		<DockPanel Grid.Row="0" Margin="0">
			<Menu DockPanel.Dock="Top" Background="Gray" FontSize="14">
				<MenuItem Header="About" Command="{Binding AboutCommand}"/>
			</Menu>
		</DockPanel>

		<!-- Основная область -->
		<Border Grid.Row="1" Margin="10" Background="#fafafa" BorderBrush="#e0e0e0">
			<Grid x:Name="DGrid" Margin="10"/>
		</Border>

		<!-- Нижняя панель с параметрами И кнопкой Change -->
		<Border Grid.Row="2" Background="Gray"  Padding="10">
			<StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center">

				<TextBlock>
					<Run Text="K: " FontWeight="Bold" Foreground="#37474f"/>
					<Run Text="{Binding Params.K}" Foreground="#00796b"/>
				</TextBlock>

				<TextBlock>
					<Run Text="N: " FontWeight="Bold" Foreground="#37474f"/>
					<Run Text="{Binding Params.N}" Foreground="#00796b"/>
				</TextBlock>


				<TextBlock>
					<Run Text="M: " FontWeight="Bold" Foreground="#37474f"/>
					<Run Text="{Binding Params.M}" Foreground="#00796b"/>
				</TextBlock>

				<Button Content="Change"
                        Command="{Binding ChangeCommand}"
                        Background="#CCCCCC"
                        Foreground="Black"
                        BorderBrush="#AAAAAA"
                        Padding="10,5"/>
			</StackPanel>
		</Border>
	</Grid>
</Window>